<div class='mt-2'>
    <div class='row'>

        {{#each users}}

            <div class='col-sm-6 col-lg-4'>
                <div class='card mt-4'>
                    {{! Chuyển hướng trang  }}
                    <a href='/users/{{this.slug}}'>
                        <img class='card-img-top' src='{{this.image}}' alt='Card image cap' /></a>
                    <div class='card-body'>
                        <a href='/users/{{this.slug}}'><h5 class='card-title'>{{this.name}}</h5></a>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='#' class='btn btn-primary'>Go somewhere</a>
                    </div>
                </div>
            </div>

        {{/each}}
    </div>
</div>