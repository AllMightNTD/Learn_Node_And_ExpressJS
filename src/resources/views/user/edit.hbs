<div class='mt-4'>
    <h3>
        Edit Employee
    </h3>

    {{! Thực tế ở form chưa submit phương thức nào khác POST VÀ GET }}

    <form method='POST' action='/user/{{user._id}}?_method=PUT'>
        <div class='form-group'>
            <label for='name'>Name</label>
            <input
                type='text'
                class='form-control'
                value='{{user.name}}'
                id='name'
                name='name'
                placeholder='Enter name'
            />
            <label for='description'>Description</label>
            <textarea
                type='text'
                class='form-control'
                id='description'
                name='description'
                placeholder='Enter description'
            >{{user.description}}</textarea>
            <label for='image'>Image</label>
            <input type='text' class='form-control' value='{{user.image}}' id='image' name='image' />
            <label for='VideoID'>VideoID</label>
            <input type='text' class='form-control' value='{{user.videoID}}' id='videoID' name='videoID' />
        </div>
        <button type='submit' class='btn btn-primary'>Lưu Lại</button>
    </form>
</div>